<div class="row">
	<div class="col-xs-12">
		<table class="table table-striped">
			<thead>
				<th class="col-xs-4">System Name</th>
				<th class="col-xs-2 hidden-xs">Open Tickets</th>
				<th class="col-xs-2 hidden-xs">Closed Tickets</th>
				<th class="col-xs-2 hidden-xs">Total Tickets</th>
				<th class="col-xs-1"></th>
				<th class="col-xs-1"></th>
			</thead>
			<tbody>
				<% @topics.each do |topic| %>
					<tr>
						<td class="col-xs-4"><%= topic.system %></td>
						<td class="col-xs-2 hidden-xs"><%= topic.tickets.open.count %></td>
						<td class="col-xs-2 hidden-xs"><%= topic.tickets.closed.count %></td>
						<td class="col-xs-2 hidden-xs"><%= topic.tickets.count %></td>
						<td class="col-xs-1"><%= link_to "Edit", edit_topic_path(topic) %></td>
						<td class="col-xs-1"><%= link_to "Delete" %></td>
					</tr>
				<% end %>
		</table>
	</div>
</div>