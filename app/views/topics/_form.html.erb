<%= render 'shared/validation_errors', obj: @topic %>

<%= form_for @topic do |f| %>
<div class="row">
  <div class="form-group col-md-6">
    <%= f.label :name, 'Topic Name' %>
    <%= f.text_field :name, class: 'form-control', placeholder: 'Enter System Name' %>
  </div>
  <div class="form-group col-md-6">
    <%= f.label :active, 'Topic Status' %>
    <br />
    <%= f.radio_button(:active, 0, checked: @topic.active == false) %>
    Inactive
    <br />
    <%= f.radio_button(:active, 1, checked: @topic.active == true) %>
    Active
  </div>
</div>
<div class="row">
  <div class="form-group col-md-12">
    <%= submit_button_add_update(@topic) %>
    <%= link_to 'Cancel', :back, class: 'btn btn-default' if action_name == 'edit' %>
  </div>
</div>
<% end %>
