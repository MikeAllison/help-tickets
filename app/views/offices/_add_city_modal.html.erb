<!-- Add City Modal -->
<%= form_for @city do |f| %>
	<div class="modal fade" id="addCityModal" tabindex="-1" role="dialog" aria-labelledby="addCityModalLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	        <h4 class="modal-title" id="addCityModalLabel">Add City</h4>
	      </div>
	      <div class="modal-body">
	      	<div class="form-group">
      			<%= f.label :name, 'City Name' %>
      			<%= f.text_field :name, class: 'form-control', placeholder: 'Enter City Name' %>
      		</div>
      		<div class="form-group">
      			<%= f.label :state_id %>
	 					<%= f.collection_select(:state_id, State.all.order(:name), :id, :name, {}, { class: 'form-control' }) %>
      		</div>			
	      </div>
	      <div class="modal-footer">
	      	<%= f.submit 'Add City', class: 'btn btn-primary' %>
	        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
	      </div>
	    </div>
	  </div>
	</div>	
<% end %>