<%= form_for @office, html: { role: "form" } do |f| %>
	<div class="row">
		<div class="form-group col-xs-6">
			<%= f.label :name, "Office Name" %>
	  	<%= f.text_field :name, class: "form-control", placeholder: "Enter Office Name" %>
		</div>
		<div class="form-group col-xs-6">  
		  <%= f.label :city_id %>
		  <%= f.collection_select(:city_id, City.all.order(:name), :id, :city_state_abbr, { prompt: true }, { class: "form-control" }) %>
		</div>
	</div>
	<div class="row">
		<div class="form-group col-xs-6">
			<% if params[:action] == "edit" %>
				<%= f.submit "Update Office", class: "btn btn-primary" %>
				<%= link_to "Cancel", new_office_path, class: "btn btn-default" %>
			<% else %>
				<%= f.submit "Add Office", class: "btn btn-primary" %>
			<% end %>
		</div>
		<div class="form-group col-xs-6">
			<%= link_to "Add City", new_city_path, class: "btn btn-primary" %>
		</div>
	</div>
<% end %>