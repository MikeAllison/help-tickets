<%= form_for @office, html: { role: 'form' } do |f| %>
	<div class="row">
		<div class="form-group col-md-6">
			<%= f.label :name, 'Office Name' %>
	  	<%= f.text_field :name, class: 'form-control', placeholder: 'Enter Office Name' %>
		</div>
		<div class="form-group col-md-6">  
		  <%= f.label :city_id %>
		  <%= f.collection_select(:city_id, City.not_hidden.order(:name), :id, :city_state_abbr, { prompt: true }, { class: 'form-control' }) %>
		</div>
	</div>
	<div class="row">
		<div class="form-group col-md-3">
			<%= f.label :active, 'Office Status' %>
			<br />
			<%= f.radio_button(:active, 0, checked: @office.active == false) %>
			Inactive
			<br />
			<%= f.radio_button(:active, 1, checked: @office.active == true) %>
			Active
		</div>
		<div class="form-group col-md-3">
		</div>
		<div class="form-group col-md-6">
			<%= link_to 'Add City', new_city_path, class: 'btn btn-primary' %>
		</div>
	</div>
	<div class="row">
		<div class="form-group col-md-6">
			<%= submit_button %>
			<%= cancel_button %>
		</div>
	</div>
<% end %>