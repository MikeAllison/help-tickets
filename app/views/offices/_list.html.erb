<div class="row">
	<div class="col-xs-12">
		<table class="table table-striped">
			<thead>
				<th class="col-xs-4"><%= sort_column "Office", "name" %></th>
				<th class="col-xs-3"><%= sort_column "City", "cities.name", "city" %></th>
				<th class="col-xs-2">State</th>
				<th class="col-xs-2 hidden-xs">Employees</th>
				<th class="col-xs-1"></th>
			</thead>
			<tbody>
				<% @offices.each do |office| %>
					<tr>
						<td class="col-xs-4"><%= office.name %></td>
						<td class="col-xs-3"><%= office.city.name %></td>
						<td class="col-xs-2"><%= office.city.state.abbreviation %></td>
						<td class="col-xs-2 hidden-xs"><%= office.employees.count %></td>
						<td class="col-xs-1">
							<%= link_to edit_office_path(office), title: 'Edit' do %>
								<span class="glyphicon glyphicon-wrench btn btn-default btn-xs" aria-hidden="true"></span>
								<span class="sr-only" title="Edit">Edit</span>
							<% end %>
							<%= link_to office, method: :delete, title: 'Delete' do %>
								<span class="glyphicon glyphicon-trash btn btn-default btn-xs" aria-hidden="true"></span>
								<span class="sr-only" title="Delete">Delete</span>
							<% end %>
						</td>
					</tr>
				<% end %>
		</table>
	</div>
</div>