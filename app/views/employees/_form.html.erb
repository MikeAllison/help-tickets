<%= form_for @employee do |f| %>
	<%= f.label :first_name %>
  <%= f.text_field :first_name %>
  
  <%= f.label :last_name %>
  <%= f.text_field :last_name %>
  
  <%= f.label :user_name %>
  <%= f.text_field :user_name %>
  
  <%= f.label :password %>
  <%= f.password_field :password %>
  
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  
  <%= f.label :office_id %>
  <%= f.collection_select(:office_id, Office.all.order(:name), :id, :name) %>
  
  <%= f.label :admin %>
  <%= f.check_box :admin %>
  
  <%= f.submit %>
<% end %>
