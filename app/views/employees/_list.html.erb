<div class="table-responsive">
	<table class="table table-striped">
		<thead>
			<tr>
				<th class="col-md-2"><%= sort_column 'Name', 'last_name' %></th>
				<th class="col-md-2"><%= sort_column 'User Name', 'user_name' %></th>
				<th class="col-md-2"><%= sort_column 'Office', 'offices.name', 'office' %></th>
				<th class="col-md-2 hidden-xs">Tickets Created</th>
				<% if params[:status] == 'admin' %>
					<th class="col-md-2 hidden-xs">Tickets Assigned</th>
				<% end %>
				<th class="col-md-2">Actions</th>
			</tr>
		</thead>
		<tbody>
			<% @employees.each do |employee| %>
				<tr>
					<td class="col-md-2">
						<%= employee_status_icon(employee.active) %>
						&nbsp;
						<%= employee.last_first %>
					</td>
					<td class="col-md-2"><%= employee.user_name %></td>
					<td class="col-md-2"><%= employee.office.name %></td>
					<td class="col-md-2 hidden-xs">
						<%= link_to employee_tickets_path(employee), title: 'Employee\'s Created Tickets', data: { toggle: 'tooltip', placement: 'top' } do %>
							<%= employee.created_tickets.count %>
						<% end %>
					</td>
					<% if params[:status] == 'admin' %>
						<td class="col-md-2 hidden-xs">
							<%= link_to assigned_tickets_employee_path(employee), title: 'Technican\'s Assigned Tickets', data: { toggle: 'tooltip', placement: 'top' } do %>
							  <%= employee.assigned_tickets.count %>
							<% end %>
						</td>
					<% end %>
					<td class="col-md-2">
						<%= link_to edit_employee_path(employee), title: 'Edit', data: { toggle: 'tooltip', placement: 'top' } do %>
							<span class="glyphicon glyphicon-wrench btn btn-default btn-xs" aria-hidden="true"></span>
							<span class="sr-only" title="Edit">Edit</span>
						<% end %>
						<%= link_to employee, method: :delete,
																	title: 'Delete',
																	data: { toggle: 'tooltip', placement: 'top', confirm: "WARNING!  This will delete all tickets created by, and assigned to, this employee.  Is is recommended that you mark an employee inactive rather than deleting them.\n\nAre you sure that you would like to delete this employee?" } do %>
							<span class="glyphicon glyphicon-trash btn btn-default btn-xs" aria-hidden="true"></span>
							<span class="sr-only" title="Delete">Delete</span>
						<% end %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
