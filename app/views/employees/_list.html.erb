<div class="row">
	<div class="col-md-12">
		<table class="table table-striped">
			<thead>
				<th class="col-md-4"><%= sort_column 'Name', 'last_name' %></th>
				<th class="col-md-2"><%= sort_column 'User Name', 'user_name' %></th>
				<th class="col-md-3"><%= sort_column 'Office', 'offices.name', 'office' %></th>
				<th class="col-md-2 hidden-xs">Total Tickets</th>
				<th class="col-md-1">Actions</th>
			</thead>
			<tbody>
				<% @employees.each do |employee| %>
					<tr>
						<td class="col-md-4">
							<%= employee_status_icon(employee.active) %>
							&nbsp;
							<%= employee.last_first %>
						</td>
						<td class="col-md-2"><%= employee.user_name %></td>
						<td class="col-md-3"><%= employee.office.name %></td>
						<td class="col-md-2 hidden-xs">
							<%= employee.created_tickets.count %>
						</td>
						<td class="col-md-1">
							<% if current_employee.admin? %>
								<%= link_to employee_tickets_path(employee), title: 'Show Tickets', data: { toggle: 'tooltip', placement: 'top' } do %>
									<span class="glyphicon glyphicon-th-list btn btn-default btn-xs" aria-hidden="true"></span>
									<span class="sr-only" title="Show Tickets">Show Tickets</span>
								<% end %>
							<% end %>
							<%= link_to edit_employee_path(employee), title: 'Edit', data: { toggle: 'tooltip', placement: 'top' } do %>
								<span class="glyphicon glyphicon-wrench btn btn-default btn-xs" aria-hidden="true"></span>
								<span class="sr-only" title="Edit">Edit</span>
							<% end %>
							<%= link_to employee, method: :delete, title: 'Delete', data: { toggle: 'tooltip', placement: 'top' } do %>
								<span class="glyphicon glyphicon-trash btn btn-default btn-xs" aria-hidden="true"></span>
								<span class="sr-only" title="Delete">Delete</span>
							<% end %>
						</td>
					</tr>
				<% end %>
		</table>
	</div>
</div>