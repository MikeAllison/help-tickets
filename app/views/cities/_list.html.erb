<div class="row">
	<div class="col-lg-12">
		<table class="table table-striped">
			<thead>
				<tr>
					<th class="col-lg-6"><%= sort_column 'City', 'name' %></th>
					<th class="col-lg-5"><%= sort_column 'State', 'states.name', 'state' %></th>
					<th class="col-lg-1">Actions</th>
				</tr>
			</thead>
			<tbody>
				<% @cities.each do |city| %>
					<tr>
						<td class="col-lg-6"><%= city.name %></td>
						<td class="col-lg-5"><%= city.state.name %></td>
						<td class="col-lg-1">
							<%= link_to edit_city_path(city), title: 'Edit', data: { toggle: 'tooltip', placement: 'top' } do %>
								<span class="glyphicon glyphicon-wrench btn btn-default btn-xs" aria-hidden="true"></span>
								<span class="sr-only" title="Edit">Edit</span>
							<% end %>
							<%= link_to city, method: :delete, title: 'Delete', data: { toggle: 'tooltip', placement: 'top' } do %>
								<span class="glyphicon glyphicon-trash btn btn-default btn-xs" aria-hidden="true"></span>
								<span class="sr-only" title="Delete">Delete</span>
							<% end %>
						</td>
					</tr>
				<% end %>
		</table>
	</div>
</div>