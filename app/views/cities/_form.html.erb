<%= render 'shared/validation_errors', obj: @city %>

<%= form_for @city do |f| %>
<div class="row">
	<div class="form-group col-md-6">
		<%= f.label :name, 'City Name' %>
		<%= f.text_field :name, class: 'form-control', placeholder: 'Enter City Name' %>
	</div>
	<div class="form-group col-md-6">
		<%= f.label :state_id %>
		<%= f.collection_select(:state_id, State.all.order(:name), :id, :name, { prompt: true }, { class: 'form-control' }) %>
	</div>
</div>
<div class="row">
	<div class="form-group col-md-12">
		<%= submit_button_add_update(@city) %>
		<%= link_to 'Cancel', :back, class: 'btn btn-default' if action_name == 'edit' %>
	</div>
</div>
<% end %>
