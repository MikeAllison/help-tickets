<!-- Add City Modal -->
<%= form_for @city, remote: true do |f| %>
<div class="modal fade" id="addCityModal" tabindex="-1" role="dialog" aria-labelledby="addCityModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <%= button_tag nil, type: 'button', class: 'close', data: { dismiss: 'modal' } do %>
        <span aria-hidden="true">&times;</span>
        <span class="sr-only">Close</span>
        <% end %>
        <h4 class="modal-title" id="addCityModalLabel">Add City</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= f.label :name, 'City Name' %>
          <%= f.text_field :name, class: 'form-control', placeholder: 'Enter City Name' %>
        </div>
        <div class="form-group">
          <%= f.label :state_id %>
          <%= f.collection_select(:state_id, State.all.order(:name), :id, :name, { prompt: true }, { class: 'form-control' }) %>
        </div>
      </div>
      <div class="modal-footer">
        <%= hidden_field_tag :submitted_from, :add_city_modal %>
        <%= f.submit 'Add City', class: 'btn btn-primary' %>
        <%= button_tag 'Cancel', type: 'button', class: 'btn btn-default', data: { dismiss: 'modal' } %>
      </div>
    </div>
  </div>
</div>
<% end %>
