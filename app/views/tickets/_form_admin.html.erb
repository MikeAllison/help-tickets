<%= form_for @ticket, html: { role: "form" } do |f| %>
	<div class="row">
		<div class="form-group col-xs-4">
		<%= f.label :employee_id, "Select Employee" %>
		<%= f.collection_select(:employee_id, Employee.all.order(:last_name), :id, :last_first, { selected: @current_employee.id }, { class: "form-control" }) %>
		</div>
		<div class="form-group col-xs-4">
			<%= f.label :topic_id, "Select Topic" %>
			<%= f.collection_select(:topic_id, Topic.all.order(:system), :id, :system, { prompt: true }, { class: "form-control" }) %>
		</div>
		<div class="form-group col-xs-4">	
			<%= f.label :status_id, "Select Status" %>
			<%= f.collection_select(:status_id, Status.all, :id, :state, { prompt: true }, { class: "form-control" }) %>
		</div>
	</div>
	<div class="row">
		<div class="form-group col-xs-12">	
			<%= f.label :description, "Describe the Problem" %>
			<%= f.text_area :description, class: "form-control" %>
		</div>
	</div>
	<div class="row">
		<div class="form-group col-xs-12">
			<%= submit_button %>
			<%= cancel_button %>
		</div>
	</div>	
<% end %>