<div class="row">
	<div class="col-md-12">
		<h3>Comments</h3>
	</div>
</div>

<% unless @ticket.status.closed? %>
	<div class="row">
		<div class="col-md-12">
			<div class="panel panel-default">
			  <div class="panel-body">
			  	<%= render :file => 'comments/new' %>
			  </div>
			</div>
		</div>
	</div>
<% end %>

<div class="row">
	<div class="col-xs-12">
		<% @ticket.comments.order('created_at DESC').each do |comment| %>
			<% if comment.closing_comment %>
				<div class="panel panel-success">
			<% elsif comment.reopening_comment %>
				<div class="panel panel-danger">
			<% else %>
				<div class="panel panel-default">
			<% end %>
				  <div class="panel-heading">
				    <h4>
				    	<%= comment.created_at.strftime('%m/%d/%Y %I:%M %p') %>
				    	&nbsp;&#45;&nbsp;
				    	<%= comment.employee.last_first %>
				    	<span class="pull-right">
				    		<% if comment.reopening_comment %>
				    			&#40;Ticket Reopened&#41;
				    		<% elsif comment.closing_comment %>
				    			&#40;Closing Comment&#41;
				    		<% end %>
				    	</span>
				    </h4>
				  </div>
				  <div class="panel-body">
				    <ul class="list-unstyled">
				    	<li><%= comment.body %></li>
				  	</ul>
				  </div>
				</div>
		<% end %>
	</div>
</div>
