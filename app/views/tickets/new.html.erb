<div class="jumbotron">
  <h1>Create a New Ticket</h1>
  <p>Please be as descriptive as possible.</p>
  <!-- Button trigger modal -->
	<button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#createTicketModal">Create a Ticket</button>
</div>

<!-- New Ticket Modal -->
<%= simple_form_for @ticket, html: { class: "form-horizontal" } do |f| %>
	<div class="modal fade" id="createTicketModal" tabindex="-1" role="dialog" aria-labelledby="createTicketLabel" aria-hidden="true">
	  <div class="modal-dialog">
	    <div class="modal-content">
	      <div class="modal-header">
	        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
	        <h4 class="modal-title" id="createTicketLabel">Create a Ticket</h4>
	      </div>
	      <div class="modal-body">
						<%= f.association :employee, label_method: :last_first, prompt: 'Select Employee' %>
						<%= f.association :topic, label_method: :system, prompt: 'Select Topic' %>
						<%= f.association :status, label_method: :state, prompt: 'Select Ticket State' %>
						<%= f.input :description %>
	      </div>
	      <div class="modal-footer">
	        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
	        <%= f.button :submit, class: 'btn btn-primary' %>
	      </div>
	    </div>
	  </div>
	</div>
<% end %>