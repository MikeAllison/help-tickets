<div class="panel panel-default">
  <div class="panel-heading">
    <h3 class="panel-title">Create a Ticket</h3>
  </div>
  <div class="panel-body">
    <%= simple_form_for @ticket, html: { class: "form-horizontal" } do |f| %>
    	<%= f.association :employee, collection: Employee.all.order(:last_name), label_method: :last_first, prompt: 'Select Employee' %>
			<%= f.association :topic, label_method: :system, prompt: 'Select Topic' %>
			<%= f.association :status, label_method: :state, prompt: 'Select Ticket State' %>
			<%= f.input :description %>
			<%= f.button :submit, class: 'btn btn-primary' %>
		<% end %>
  </div>
</div>