<%= form_for @ticket, html: { role: 'form' } do |f| %>
	<div class="row">
		<div class="form-group col-md-6">
		<%= f.label :creator_id, 'Select Employee' %>
		<%= f.collection_select(:creator_id, Employee.active.order(:last_name), :id, :last_first, { selected: current_employee.id }, { class: 'form-control' }) %>
		</div>
		<div class="form-group col-md-6">
			<%= f.label :topic_id, 'Select Topic' %>
			<%= f.collection_select(:topic_id, Topic.active.order(:system), :id, :system, { prompt: true }, { class: 'form-control' }) %>
		</div>
	</div>
	<div class="row">
		<div class="form-group col-md-12">	
			<%= f.label :description, 'Describe the Problem' %>
			<%= f.text_area :description, class: 'form-control' %>
		</div>
	</div>
	<div class="row">
		<div class="form-group col-md-12">
			<%= submit_button %>
			<%= cancel_button %>
		</div>	
	</div>	
<% end %>