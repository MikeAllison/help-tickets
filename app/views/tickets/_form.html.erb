<%= form_for @ticket do |f| %>
	<%= f.label :employee_id %>
	<%= f.collection_select(:employee_id, Employee.all.order(:last_name), :id, :last_first) %>
	
	<%= f.label :topic_id %>
	<%= f.collection_select(:topic_id, Topic.all.order(:system), :id, :system) %>
	
	<%= f.label :status_id %>
	<%= f.collection_select(:status_id, Status.all, :id, :state)  %>
	
	<%= f.label :description %>
	<%= f.text_area :description %>
	
	<%= f.submit "Submit Ticket" %>
<% end %>