<div class="row">
  <div class="col-xs-12">
    <div id="welcome" class="jumbotron">
      <h1>Welcome to Help Tickets</h1>
      <% unless logged_in? %>
      <p>
        Please log in to submit a ticket.
      </p>
      <!-- Button to trigger modal -->
      <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#loginModal">
        Log In
      </button>
      <% else %>
      <p>
        Hello, <%= current_employee.fname %>!
      </p>
      <%= button_to 'Log Out', logout_path, method: 'delete', class: 'btn btn-danger btn-lg' %>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="alert alert-info text-right">
      Code for this project can be found on GitHub:
      <a href="https://github.com/MikeAllison/help-tickets" target="_blank">
        <code>https://github.com/MikeAllison/help-tickets</code>
      </a>
    </div>
  </div>
</div>

<%= render 'login_modal' %>
